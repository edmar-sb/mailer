{
  "name": "@nestjs-modules/mailer",
  "version": "3.0.0",
  "private": false,
  "description": "NestJS - a mailer module (@mailer)",
  "keywords": [
    "nest",
    "nodemailer",
    "mailer",
    "nodejs"
  ],
  "author": "Gennady Paleev <gv.paleev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gvpaleev/mailer.git"
  },
  "bugs": {
    "url": "https://github.com/gvpaleev/mailer/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "deploy": "sh ./publish.sh",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "test": "jest"
  },
  "husky": {
