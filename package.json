      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@css-inline/css-inline": "0.20.0",
    "glob": "13.0.1"
  },
  "overrides": {
    "html-minifier": "npm:html-minifier-terser@^7.2.0",
    "jest": {
      "glob": "^13.0.0"
    },
    "mjml": {
      "glob": "^13.0.0"
    },
    "test-exclude": {
      "glob": "^13.0.0"
    },
    "encoding-sniffer": {
      "whatwg-encoding": "^3.1.1"
    }
  },
  "optionalDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/pug": "^2.0.10",
    "@types/mjml": "^4.7.4",
    "ejs": "^4.0.1",
    "handlebars": "^4.7.8",
    "mjml": "^5.0.0-alpha.10",
    "pug": "^3.0.3",
    "liquidjs": "^10.24.0",
    "preview-email": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-angular": "20.4.1",
    "@nestjs/common": "11.1.13",
    "@nestjs/core": "11.1.13",
    "@nestjs/testing": "11.1.13",

    "@types/jest": "30.0.0",
    "@types/lodash": "4.17.23",
    "@types/nodemailer": "7.0.9",
    "@types/pug": "2.0.10",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "nodemailer": "8.0.1",
    "prettier": "3.8.1",
    "preview-email": "3.1.1",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.1.2",
    "rxjs": "7.8.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@nestjs/common": ">=7.0.9",
    "@nestjs/core": ">=7.0.9",
    "@types/ejs": ">=3.0.3",
    "@types/pug": ">=2.0.6",
    "@types/mjml": ">=4.7.4",
    "nodemailer": ">=6.4.6",
    "ejs": ">=3.1.2",
    "handlebars": ">=4.7.6",
    "mjml": ">=4.15.3",
    "pug": ">=3.0.1",
    "liquidjs": ">=10.8.2",
    "preview-email": ">=3.0.19"
  }
